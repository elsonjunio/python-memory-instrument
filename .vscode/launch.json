{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // python -m debugpy --listen 5678 --wait-for-client ./myscript.py
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Arquivo Atual",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        {
            "name": "Flask: Launch app",
            "type": "debugpy",
            "request": "launch",

            // Executa Flask como módulo
            "module": "flask",

            // Argumentos do Flask
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],

            // Onde está seu app Flask?
            "env": {
                "FLASK_APP": "examples/flask_example/app.py",
                "FLASK_ENV": "development",
                "PYTHONPATH": "${workspaceFolder}"
            },

            // Terminal embutido do VSCode
            "console": "integratedTerminal",

            // Captura código fora do workspace para debugging
            "justMyCode": false
        },
        {
            "name": "Python: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        }
    ]
}