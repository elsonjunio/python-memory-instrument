    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Arquivo Atual",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        {
            "name": "Python: src/main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: src/instrument_and_run.py",
            "type": "debugpy",
            "request": "launch",
            "program": "app/instrument_and_run.py",
            "args": ["/home/elson/Worspace/Python/python-memory-instrument/src/main.py"],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: src/instrument_build_report.py",
            "type": "debugpy",
            "request": "launch",
            "program": "app/instrument_build_report.py",
            "args": ["/home/elson/Worspace/Python/python-memory-instrument/profile_report.json"],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        }
    ]
}